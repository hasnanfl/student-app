<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uta"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/hijau"
        android:padding="20dp">

        <ImageView
            android:id="@+id/foto_profil"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@drawable/logoo"/>

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:layout_toRightOf="@id/foto_profil"
            android:text="Student App"
            android:textColor="@color/putih"
            android:textSize="33sp"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/npm_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foto_profil"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-33dp"
            android:layout_toRightOf="@id/foto_profil"
            android:includeFontPadding="false"
            android:text="YPAI Al-Misbah"
            android:textColor="@color/putih"
            android:textSize="23sp"
            android:fontFamily="sans-serif-light"/>




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:background="@color/hijau">


        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keluar"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingTop="6dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:background="@drawable/bg_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ikon1"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:src="@drawable/prof"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ikon1"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:text="Profil YPAI Al-Misbah"
                    android:textColor="@color/hijau"
                    android:gravity="center"
                    android:textSize="20sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:background="@drawable/bg_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ikon2"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/galeri"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/galeri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Galeri"
                    android:textSize="20sp"
                    android:textColor="@color/hijau"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:layout_below="@id/ikon2"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingBottom="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:background="@drawable/bg_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ikon3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/kontakk"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/kontakk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ikon3"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:text="Kontak"
                    android:textColor="@color/hijau"
                    android:gravity="center"
                    android:textSize="20sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ViewFlipper
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </ViewFlipper>



</LinearLayout>
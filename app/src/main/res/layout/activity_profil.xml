<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#fece2f"
        android:padding="20dp">

        <ImageView
            android:id="@+id/foto_profil"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add_a_photo_black_24dp"/>

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:layout_toRightOf="@id/foto_profil"
            android:text="full name"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/npm_edt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foto_profil"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-33dp"
            android:layout_toRightOf="@id/foto_profil"
            android:includeFontPadding="false"
            android:text="npm"
            android:textSize="20sp" />




    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:background="#fece2f">


        <Button
            android:id="@+id/btn_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Email" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="#fece2f"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ikon1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bitcoin"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ikon1"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:text="Profile"
                    android:textSize="20sp" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#fece2f"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="#fece2f"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ikon2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bitcoin"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/gata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gatau apa"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:layout_below="@id/ikon2"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#fece2f"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="#fece2f"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ikon3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bitcoin"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/gat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gatau apa"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:layout_below="@id/ikon3"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#fece2f"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="#fece2f"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ikon4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bitcoin"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/gatauuuuu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gatau apa"
                    android:textSize="20sp"
                    android:layout_centerInParent="true"
                    android:includeFontPadding="false"
                    android:layout_below="@id/ikon4"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>